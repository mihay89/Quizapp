<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_display_result_of_quiz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/churcill"
    tools:context="com.example.adymihai.quizapp.Question2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select your favourite (This may be one of the most important questions, as there are a few great android developers that don't like these flavours! Choose wisely!)"
        android:textSize="18sp" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vanilla"
        android:id="@+id/vanilla" />

    <CheckBox
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Chocolate"
    android:id="@+id/chocolate" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Strawberry"
        android:id="@+id/strawberry" />

    <TextView
        android:id="@+id/the_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your final score is....."
        android:textSize="18sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/previous3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="30dp"
            android:onClick="back3"
            />
        <Button
            android:id="@+id/end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Press this button to end the Quiz and start a new journey in android!"
            android:layout_centerInParent="true"
            android:onClick="endQuiz"/>

    </RelativeLayout>

</LinearLayout>
