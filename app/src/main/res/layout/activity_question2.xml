<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mandela"
    tools:context="com.example.adymihai.quizapp.Question2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select your most desired benefits that this kind of job offers "
        android:textSize="18sp" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mobility"
        android:id="@+id/checkBox" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Money"
        android:id="@+id/checkBox2" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The amazing oportunity to actually make something useful with the time you spend in front of a computer and also being paid for it"
       android:id="@+id/checkBox1"
        />
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
       <Button
           android:id="@+id/previous1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Previous"
           android:layout_alignParentBottom="true"
           android:layout_alignParentLeft="true"
           android:layout_margin="30dp"
           android:onClick="back"/>
           <Button
               android:id="@+id/next2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Next"
               android:layout_alignParentBottom="true"
               android:layout_alignParentRight="true"
               android:layout_margin="30dp"
               android:onClick="toQuestion3"/>

       </RelativeLayout>
</LinearLayout>
